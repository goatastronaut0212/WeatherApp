<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/dark_blue_700"
             tools:context=".fragments.ManageLocationFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/baseline_add_location_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:backgroundTint="#D1E1FA"
            android:id="@+id/floatingActionButtonAddLocation"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <SearchView
                android:id="@+id/searchviewLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <ListView
                android:id="@+id/listviewLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

</FrameLayout>